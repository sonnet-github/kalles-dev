<script>
  $('.t4s-product').addClass('product-grid-item');
  window.GRFQConfigs = window.GRFQConfigs || {};
  window.GRFQConfigs.selector = window.GRFQConfigs.selector || {};
  window.GRFQConfigs.selector.productCollectionItem += ', .t4s-product';
  window.GRFQConfigs.selector.productCollectionHref = 'a[href*="products/"]';
  window.GRFQConfigs.selector.price_selector += ', .t4s-product__price-review';

  document.addEventListener('theme.filter.success', function (e) {
    window.GRFQConfigs = window.GRFQConfigs || {};
    window.GRFQConfigs.products = [];
    GRFQApp.initialize();
  });

  //top navigation
  if ($(window).width() > 1100) {
    $('.top-navigation-bar .menu-group').on('mouseenter', function () {
      $(this).find('.tnb-sub-menu').stop().slideDown();
    });
    $('.top-navigation-bar .menu-group').on('mouseleave', function () {
      $(this).find('.tnb-sub-menu').stop().slideUp();
    });
  } else {
    //mobile
    $('.top-navigation-bar .mob-main-toggle').click(function () {
      $(this).next('.tnb-main-menu').stop().slideToggle();
    });
    $('.top-navigation-bar .menu-group').click(function () {
      $(this).addClass('toggled')l
      $(this).find('.tnb-sub-menu').stop().slideToggle();
    });
  }

  $(window).resize(function() {
    if($(window).width() < 1100) {
      $('.top-navigation-bar .mob-main-toggle').click(function () {
        $(this).next('.tnb-main-menu').stop().slideToggle();
      });
      $('.top-navigation-bar .menu-group').click(function () {
        console.log($(this).find('.tnb-sub-menu'));
        $(this).toggleClass('toggled');
        $(this).find('.tnb-sub-menu').stop().slideToggle();
      });
    }
  })
</script>
<style>
  .t4s-cartPage__items .rfq-btn {
    display: none !important;
  }
</style>
